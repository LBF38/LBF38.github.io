{
	"name": "lbf38.github.io",
	"version": "1.0.2",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "pnpm i18n && pnpm build:content && vite build",
		"build:content": "contentlayer build",
		"build:content-cachebust": "contentlayer build --clearCache",
		"bump": "pnpm version-packages",
		"changeset": "npx changeset",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "concurrently --kill-others \"pnpm dev:content\" \"pnpm dev:svelte\"",
		"dev:content": "contentlayer dev",
		"dev:svelte": "vite dev",
		"format": "prettier --plugin-search-dir . --write .",
		"gh-pages": "pnpm build && pnpx gh-pages -d build",
		"i18n": "paraglide-js compile --project ./project.inlang",
		"i18n:translate": "pnpx @inlang/cli machine translate --project ./project.inlang",
		"i18n:watch": "pnpm i18n --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"preview": "vite preview",
		"release": "pnpm build && changeset publish",
		"sort": "sort-package-json",
		"test": "npm run test:integration && npm run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"version-packages": "changeset version",
		"machine-translate": "inlang machine translate --project project.inlang"
	},
	"dependencies": {
		"@changesets/cli": "^2.29.8",
		"changesets-changelog-clean": "^1.3.0",
		"clsx": "^2.1.1",
		"lucide-svelte": "^0.564.0",
		"svelte-sonner": "^0.3.28",
		"tailwind-merge": "^2.6.1",
		"tailwind-variants": "^0.2.1"
	},
	"devDependencies": {
		"@exodus/schemasafe": "^1.3.0",
		"@huntabyte/mdsvex": "^0.16.8",
		"@iconify/svelte": "^5.2.1",
		"@inlang/cli": "^3.1.6",
		"@inlang/paraglide-js": "^2.11.0",
		"@internationalized/date": "^3.11.0",
		"@lucide/svelte": "^0.482.0",
		"@octokit/rest": "^20.1.2",
		"@playwright/test": "^1.58.2",
		"@sinclair/typebox": "^0.34.48",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.52.2",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@sveltejs/vite-plugin-svelte-inspector": "^2.1.0",
		"@tailwindcss/nesting": "0.0.0-insiders.565cd3e",
		"@tailwindcss/typography": "^0.5.19",
		"@tanstack/table-core": "^8.21.3",
		"@types/lodash-es": "^4.17.12",
		"@typeschema/class-validator": "^0.2.0",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"@vinejs/vine": "^1.8.0",
		"arktype": "^2.1.29",
		"autoprefixer": "^10.4.24",
		"bits-ui": "^1.8.0",
		"class-validator": "^0.14.3",
		"concurrently": "^8.2.2",
		"contentlayer": "^0.3.4",
		"embla-carousel-svelte": "^8.6.0",
		"eslint": "^10.0.0",
		"eslint-config-prettier": "^8.10.2",
		"eslint-plugin-svelte": "^2.46.1",
		"formsnap": "2.0.0-next.1",
		"gh-pages": "^5.0.0",
		"hast-util-to-html": "^9.0.5",
		"joi": "^17.13.3",
		"lodash-es": "^4.17.23",
		"mdsvex": "^0.11.2",
		"mode-watcher": "^1.1.0",
		"paneforge": "1.0.0-next.6",
		"postcss": "^8.5.6",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-pretty-code": "^0.13.2",
		"rehype-rewrite": "^4.0.4",
		"rehype-slug": "^6.0.0",
		"remark-abbr": "^1.4.2",
		"remark-code-import": "^1.2.0",
		"remark-gfm": "^4.0.1",
